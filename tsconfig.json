{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5", "es6"],
    "outDir": "dist",
    "sourceMap": true,
    "rootDir": "src",
    "strict": false,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
